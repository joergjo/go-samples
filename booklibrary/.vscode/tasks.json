{
    "version": "2.0.0",
    "type": "shell",
    "echoCommand": true,
    "cwd": "${workspaceFolder}",
    "tasks": [
        {
            "label": "build",
            "command": "go",
            "args": [
                "build",
                "-o",
                "${workspaceFolderBasename}.exe",
                "cmd/main.go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "run",
            "command": "go run ${file}",
            "group": "build"
        }
    ]
}